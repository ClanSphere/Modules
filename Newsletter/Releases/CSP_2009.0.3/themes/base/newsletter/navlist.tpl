<div style="width:242px; font-size:12px; padding-left:8px;">
	<div style="width:250px; text-align:center; font-weight:bold; font-size:18px;">An/Abmelden</div>
	<br />
	<form method="post" action="{url:newsletter_subscribe}">
		<div style="padding-bottom:2px;">E-Mail:</div>
		<div><input type="text" maxlength="75" size="40" value="" name="email" /></div>
		<br />
		<div style="text-align:center;">
			<input type="radio" name="type" value="subscribe" checked /> Anmelden
			&nbsp;&nbsp;&nbsp;
			<input type="radio" name="type" value="unsubscribe" /> Abmelden
		</div>
		<br />	
		<div style="text-align:center;">
			<input type="submit" name="submit" value="Absenden" />
		</div>	
	</form>
</div>